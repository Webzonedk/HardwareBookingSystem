<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HUS Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>


    <style type="text/css" media="print">
        .ignorePDF {
            display: none;
        }

        .body {
            -webkit-print-color-adjust: exact !important;
        }
    </style>
    @using Microsoft.AspNetCore.Http
    @inject IHttpContextAccessor httpcontextAccessor
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-expand-lg navbar-dark border-bottom-black box-shadow ignorePDF">
            <div class="container-fluid">
                <a class="navbar-brand font-weight-bold" asp-area="" asp-controller="Home" asp-action="RelocateUser" alt="Velkommen til HUS">ZBC HUS</a>

                @if (httpcontextAccessor.HttpContext.Session.GetInt32("accessLevel") > 0)
                {
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-lg-inline-flex flex-lg-row-reverse">
                        <partial name="_LoginPartial" />
                        @if (httpcontextAccessor.HttpContext.Session.GetInt32("accessLevel") > 1)
                        {
                            <ul class="navbar-nav flex-grow-1 ">



                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Location" asp-action="LocationAdmin">Placeringer</a>
                                </li>


                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Device" asp-action="Inventory">Lagerstyring</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Device" asp-action="CreateDevice">Tilføj enhed</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Device" asp-action="CategoryModelAdminView">Kategori/Model Admin</a>
                                </li>




                            </ul>
                        }
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="container-fluid" style="width:100%;">

        <main role="main">
            @RenderBody()
        </main>

    </div>

    <footer class="border-top footer text-muted ignorePDF">
        <div class="container">
            &copy; @DateTime.Now.Year - HUS Project
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
