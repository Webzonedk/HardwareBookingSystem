@model HUS_project.Models.CreateDeviceModel
@{
    ViewData["Title"] = "Opret enhed";
}

<div class=" container-fluid blue-oyster-bar"> </div>


<div class=" container containerHeader " style=" background-color:darkgrey;height:50px">

    <div class="row">
        <div class=" col-md-12">det her er en overskrift</div>
    </div>

</div>

<div class=" container " style="background-color: deepskyblue; height:300px">

    <div class="row ">
        <h4>Opret enhed</h4>
        <form class="row" asp-action="AddDeviceToDB" method="post" autocomplete="off">

            <div class="col m-md-3">
                <div class=" row">
                    <div class="col img-bg" style="height:150px">
                        <img src="~/Graphic/billede-mangler.png" style="width:150px" />
                    </div>
                </div>
                <div class="row">
                    <div class="col text-center">
                        <button type="button" class=" btn-primary btn" asp-action="CreateQRCode">upload foto</button>

                    </div>
                </div>

            </div>


            <div class="col m-md-3">
                @*<div class="form-floating">
                        <input list="categories" asp-for="@Model.Device.Model.Category.Category"/>
                        <datalist id="categories" class="form-select" >
                            <option selected>vælg</option>
                            @foreach (var item in Model.Categories)
                            {
                                <option>@item</option>
                            }
                        </datalist>
                        <label for="categories">Kategori:</label>
                    </div>*@

                <div class="form-floating ">
                    <input class="form-select" list="categories" id="exampleDataList" asp-for="@Model.Device.Model.Category.Category">
                    <datalist id="categories">

                        @foreach (var item in Model.Categories)
                        {
                            <option>@item</option>
                        }

                    </datalist>
                    <label for="exampleDataList">vælg kategori</label>
                </div>

                <br />

                <div>
                    <label>Enhedsnavn:</label>
                    <input list="models" placeholder="Indtast enhedsnavn" asp-for="@Model.Device.Model.ModelName" />
                    <datalist id="models">
                        @foreach (var item in Model.ModelNames)
                        {
                            <option>@item</option>
                        }
                    </datalist>
                </div>

                <br />

                <input class="btn-blue" type="submit" value="Gem" />



            </div>

            <div class="col-md-3 ">
                <div>
                    <label>Serienummer:</label>
                    <input placeholder="indtast serienr." asp-for="@Model.Device.SerialNumber" />

                </div>
            </div>

            <div class="col-md-3 ">
                <label>Beskrivelse</label>
                <input placeholder="Tilføj beskrivelse" asp-for="@Model.Device.Model.ModelDescription" />
            </div>



        </form>
    </div>

</div>

<div class=" containerFooter" style=" background-color:darkgrey;height:50px"></div>
