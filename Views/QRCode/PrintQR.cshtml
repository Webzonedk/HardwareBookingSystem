@model HUS_project.Models.ViewModels.QRModel
@{
    ViewData["Title"] = "Print QR";
}

<div class=" center">


    @*<h4 class=" ignorePDF">QR viewer</h4>*@
    <div class="row">

        @for (int i = 0; i < Model.QRCode.Count; i++)
        {

            <div class="col">

                <div class="row">

                    <div class="col-md-12 px-0">
                        <img class="align-self-center" src="@string.Format("data:image/png;base64,{0}",Convert.ToBase64String(Model.QRCode[i].ImageData))" width="200" />

                    </div>

                    <div class="col-md-12 px-0">
                        <label class="align-self-center">@Model.QRCode[i].LabelName</label>

                    </div>


                </div>


            </div>



        }

    </div>

    <div class="ignorePDF">
        <button onclick="window.print()">Print QR koder</button>
    </div>

</div>
